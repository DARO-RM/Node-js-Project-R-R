    <script>
	$(document).ready(function(){
       
        var form = $(".form-material");
        form.on("submit", function (event) {
              
             event.preventDefault();
             var data_ajax = {};
	
            data_ajax.username = $('#username').val();
            data_ajax.password = $('#password').val();
           
             $.ajax({
                url:"/api/login",
                method:"POST",
                dataType: "json",
                data:data_ajax,
                success:function(res){
                 
                  location.href="/"
                 
                },
                error:function(response){
                    alert('Error occured')
                     
                }
            }); //end ajax 
        });
	});
</script>