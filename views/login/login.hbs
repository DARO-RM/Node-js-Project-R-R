    <section class="login-block">
    <!-- Container-fluid starts -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->

                <form class="md-float-material form-material">
                    <div class="text-center">
                         <img src="../../assets/images/complete.png" alt="Panda"> 
                    </div>
                    <div class="auth-box card">
                        <div class="card-block">
                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center">Log In</h3>
                                </div>
                            </div>
                            <div class="form-group form-primary">
                                <input type="text" name="username" id="username" class="form-control" value="011480990" required="" placeholder="{{translation.acc_phone_number}}">
                                <span class="form-bar"></span>
                            </div>
                            <div class="form-group form-primary">
                                <input type="password" id="password" name="password" class="form-control" required="" placeholder="{{translation.acc_password}}">
                                <span class="form-bar"></span>
                                
                             {{#with  error}}
                                <div class="err-msg">{{error}}</div>
                            {{/with}}

                            </div>
                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button id="login_btn" type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">{{translation.acc_login}}</button>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-12">
                                    <p class="text-inverse text-left m-b-0">{{translation.acc_Welcome_to}} POS</p>      
                                </div> 
                            </div>
                        </div>
                    </div>
                </form>
               
            </div>
        </div>
    </section>
	
	<script>
	$(document).ready(function(){
       
        var form = $(".form-material");
        form.on("submit", function (event) {
              
             event.preventDefault();
             var data_ajax = {};
	
            data_ajax.username = $('#username').val();
            data_ajax.password = $('#password').val();
           
             $.ajax({
                url:"/api/login",
                method:"POST",
                dataType: "json",
                data:data_ajax,
                success:function(res){
                 // alert("sucess")
                  location.href="/"
                 
                },
                error:function(response){
                    alert('Error occured')
                     
                }
            }); //end ajax 
        });
	});
</script>